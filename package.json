{
  "name": "@collect/plugin",
  "version": "1.0.0",
  "private": true,
  "author": "Saurav M. H",
  "license": "GPL-3.0-or-later",
  "eslintConfig": {
    "extends": [
      "xo",
      "xo-typescript/space"
    ],
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "object-curly-spacing": "off",
          "no-negated-condition": "off"
        }
      }
    ]
  },
  "scripts": {
    "build-clean": "rimraf './packages/*/build' './packages/*/tsconfig.tsbuildinfo'",
    "build": "yarn build:js && yarn build:ts",
    "build:js": "node ./scripts/build.js",
    "build:ts": "node ./scripts/buildTs.js",
    "lint": "eslint . --cache --ext js,jsx,ts,tsx,md",
    "lint:fix": "eslint . --cache --ext js,jsx,ts,tsx,md --fix",
    "lint:prettier": "prettier '**/*.{md,yml,yaml}' --write --ignore-path .gitignore",
    "lint:prettier:ci": "prettier '**/*.{md,yml,yaml}' --check --ignore-path .gitignore",
    "watch": "yarn build:js && node ./scripts/watch.js",
    "watch:ts": "yarn build:ts --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "chalk": "^4.1.0",
    "eslint-config-xo": "^0.34.0",
    "eslint-config-xo-typescript": "^0.37.0",
    "execa": "^5.0.0",
    "glob": "^7.1.6",
    "globby": "^11.0.2",
    "micromatch": "^4.0.2",
    "prettier": "^2.2.1",
    "read-pkg": "^5.2.0",
    "rimraf": "^3.0.2",
    "string-length": "^4.0.1",
    "strip-json-comments": "^3.1.1",
    "throat": "^6.0.1",
    "typescript": "^4.1.3"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "engines": {
    "node": "^12.13.0 || ^14.15.0 || >=15.0.0"
  },
  "dependencies": {
    "eslint": "^7.19.0",
    "global": "^4.4.0"
  }
}
